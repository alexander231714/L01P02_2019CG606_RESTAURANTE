                @Html.DisplayFor(modelItem => item.nombrePlato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            <td>
                    <a class="class= btn btn-success" asp-action="Edit" asp-route-id="@item.platoId">Edit</a> |
                    <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.platoId">Details</a> |
